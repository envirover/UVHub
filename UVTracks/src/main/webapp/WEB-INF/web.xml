<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee4 http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	
	<display-name>UV Tracks Web Service</display-name>

	<servlet>
		<servlet-name>com.envirover.spl.uvtracks.UVTracksApp</servlet-name>
		<init-param>
			<param-name>jersey.config.servlet.filter.staticContentRegex</param-name>
			<param-value>/.*html</param-value>
		</init-param>
	</servlet>

	<servlet-mapping>
		<servlet-name>com.envirover.spl.uvtracks.UVTracksApp</servlet-name>
		<url-pattern>/*</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
